<div class="post-body">
  <h4><%= link_to post.title, post %></h4>
  <p><%= truncate(post.body, length: 100)%></p>

  <% if post.lastest_comment1.present? %>
    <div class="lastest_comments">
      <h5>最新评论</h5>
      <%= render :partial => "comments/comment", collection: post.lastest_comments %>
    </div>
  <% end %>
</div>